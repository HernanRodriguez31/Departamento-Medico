rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() &&
        (request.auth.token.admin == true ||
          exists(/databases/$(database)/documents/admin_whitelist/$(request.auth.uid)));
    }

    function isPostCounterUpdate() {
      return request.resource.data.diff(resource.data).changedKeys()
        .hasOnly(['likeCount', 'commentCount', 'updatedAt']);
    }

    match /admin_whitelist/{uid} {
      allow get: if isSignedIn() && (request.auth.uid == uid || isAdmin());
      allow list: if isAdmin();
      allow create, update, delete: if isAdmin();
    }

    match /usuarios/{uid} {
      allow read: if isSignedIn() && (request.auth.uid == uid || isAdmin());
      allow create, update: if isSignedIn() && (request.auth.uid == uid || isAdmin());
      allow delete: if isAdmin();
    }

    match /dm_posts/{postId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.authorUid == request.auth.uid;
      allow update, delete: if isSignedIn() && (
        resource.data.authorUid == request.auth.uid ||
        isAdmin() ||
        isPostCounterUpdate()
      );

      match /comments/{commentId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && request.resource.data.authorUid == request.auth.uid;
        allow update, delete: if isSignedIn() && (
          resource.data.authorUid == request.auth.uid ||
          isAdmin()
        );
      }

      match /likes/{uid} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && request.auth.uid == uid;
        allow delete: if isSignedIn() && (request.auth.uid == uid || isAdmin());
      }
    }

    match /dm_chats/{conversationId}/messages/{messageId} {
      allow read: if isSignedIn() && (
        resource.data.from == request.auth.uid ||
        resource.data.to == request.auth.uid ||
        resource.data.to == 'dm_group_chat' ||
        resource.data.to == 'dm_foro_general'
      );
      allow create: if isSignedIn() && (
        request.resource.data.from == request.auth.uid ||
        (request.resource.data.from == 'virtual_doctor' && request.resource.data.to == request.auth.uid)
      );
      allow update, delete: if isSignedIn() && (
        resource.data.from == request.auth.uid ||
        resource.data.to == request.auth.uid ||
        resource.data.to == 'dm_group_chat' ||
        resource.data.to == 'dm_foro_general'
      );
    }

    match /dm_conversations/{conversationId} {
      allow read: if isSignedIn() && resource.data.participants.hasAny([request.auth.uid]);
      allow create, update: if isSignedIn() &&
        request.resource.data.participants.hasAny([request.auth.uid]);
      allow delete: if isSignedIn() && resource.data.participants.hasAny([request.auth.uid]);
    }

    match /notifications/{notificationId} {
      allow read: if isSignedIn() && resource.data.toUid == request.auth.uid;
      allow create, update: if isSignedIn() && request.resource.data.toUid == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.toUid == request.auth.uid;
    }

    match /pushTokens/{uid} {
      allow read, write: if isSignedIn() && request.auth.uid == uid;
    }

    match /dm_presence/{uid} {
      allow read: if isSignedIn();
      allow create, update, delete: if isSignedIn() && request.auth.uid == uid;
    }

    match /dm_meta/{docId} {
      allow read, write: if isSignedIn();
    }

    match /dm_carousel/{carouselId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.createdByUid == request.auth.uid;
      allow update: if isSignedIn();
      allow delete: if isAdmin();

      match /comments/{commentId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && request.resource.data.authorUid == request.auth.uid;
        allow update, delete: if isSignedIn() && (
          resource.data.authorUid == request.auth.uid ||
          isAdmin()
        );
      }
    }

    match /artifacts/{appId}/public/data/committee_messages/{messageId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.authorUid == request.auth.uid;
      allow update: if isSignedIn() && (
        resource.data.authorUid == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isSignedIn() && (
        resource.data.authorUid == request.auth.uid ||
        isAdmin()
      );
    }

    match /artifacts/{appId}/public/data/committee_topics/{topicId} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn();
      allow delete: if isAdmin();
    }

    match /artifacts/{appId}/public/data/committee_members/{memberId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.userUid == request.auth.uid;
      allow update, delete: if isSignedIn() && (
        resource.data.userUid == request.auth.uid ||
        isAdmin()
      );
    }

    match /artifacts/{appId}/public/data/committee_meta/{committeeId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }
  }
}
