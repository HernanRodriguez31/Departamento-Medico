{
  "functions": {
    "source": "functions"
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "functions/**",
      "carga-usuarios/**",
      "tools/**",
      "docs/**"
    ],
    "rewrites": [
      {
        "source": "/api/ai",
        "function": "aiChat"
      }
    ],
    "headers": [
      {
        "source": "/asistente-ia/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-store"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png|webp|svg|css|js)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "port": 4000
    },
    "hub": {
      "port": 4400
    },
    "logging": {
      "port": 4500
    },
    "auth": {
      "port": 9099
    },
    "hosting": {
      "port": 5002
    },
    "storage": {
      "port": 9199
    },
    "singleProjectMode": true
  }
}
